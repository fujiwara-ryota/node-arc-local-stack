{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/shared/src/core/*"],
      "@domain/*": ["packages/shared/src/domain/*"],
      "@usecase/*": ["packages/shared/src/usecase/*"],
      "@infra/*": ["packages/shared/src/infrastructure/*"],
      "@presenter/*": ["packages/shared/src/presenter/*"]
    }
  }
}
